<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back"
    tools:context=".Login">
    <FrameLayout
        android:layout_width="match_parent"
        android:background="#BA000000"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/planning"
            android:layout_height="300dp"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:background="@drawable/back_slide"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"

                android:textSize="26dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_bold"
                android:text="Exclusive events, priceless memories...."
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:textColor="#AB1e1e1e"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Life is an event, make it memorable"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/login"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="35dp"
                        android:src="@drawable/google"
                        android:layout_height="35dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Continue with google"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

    </FrameLayout>
</FrameLayout>